# Infrastructure Configuration
# Copy this file to .env and fill in your values

# GitHub Configuration
GITHUB_ACCESS_TOKEN=your_github_personal_access_token
GITHUB_ORGANIZATION=your_github_organization
GITHUB_TEMPLATE_REPO=your-org/ai-template
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Firebase Configuration
FIREBASE_CENTRAL_PROJECT_ID=your_central_firebase_project_id
FIREBASE_CENTRAL_SERVICE_ACCOUNT=your_firebase_service_account_email
FIREBASE_PROJECT_TEMPLATE_ID=your_firebase_project_template_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Google Cloud Storage
GCS_CENTRAL_BUCKET=your_central_gcs_bucket
GCS_CENTRAL_SERVICE_ACCOUNT=your_gcs_service_account_email
GCS_PROJECT_BUCKET_PREFIX=project-storage

# Google Cloud Platform
GCP_CENTRAL_PROJECT_ID=your_central_gcp_project_id
GCP_CENTRAL_SERVICE_ACCOUNT=your_gcp_service_account_email
GCP_SECRETS_PROJECT_ID=your_secrets_project_id
GCP_SECRETS_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Central API Keys (stored in central GCP Secret Manager)
OPENAI_API_KEY=your_openai_api_key
STRIPE_SECRET_KEY=your_stripe_secret_key
SENDGRID_API_KEY=your_sendgrid_api_key
AWS_ACCESS_KEY=your_aws_access_key

# Security
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret_key
ENCRYPTION_KEY=your_encryption_key

# Optional: Additional API Keys
SLACK_BOT_TOKEN=your_slack_bot_token
DISCORD_BOT_TOKEN=your_discord_bot_token
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
SENDGRID_FROM_EMAIL=your_sendgrid_from_email

# Development Settings
NODE_ENV=development
DEBUG=backend-template:*
LOG_LEVEL=info 